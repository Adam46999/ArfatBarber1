  const workingHours = weeklyHours || fallbackWorkingHours;

  // âœ… Ù„Ø§Ø²Ù… ØªÙƒÙˆÙ† Ø¨Ø¹Ø¯ ØªØ¹Ø±ÙŠÙ workingHours
  const status = getOpeningStatus(workingHours);

