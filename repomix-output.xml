}) {
  if (!barberId) return { items: [], lastDoc: null };

  // Ù„Ùˆ Ø¹Ù†Ø¯Ùƒ ÙÙ„ØªØ±Ø© visible Ø¨Ø§Ù„Ù…Ø´Ø±ÙˆØ¹ØŒ Ø®Ù„ÙŠÙƒ consistent Ø¨ÙŠÙ† Ø§Ù„Ø²Ø¨ÙˆÙ† ÙˆØ§Ù„Ø­Ù„Ø§Ù‚
  const base = [
    collection(db, "reviews"),
    where("barberId", "==", barberId),
    orderBy("createdAt", "desc"),
    limit(pageSize),
  ];

  // Ù…Ø§ Ø¨Ù†Ø­Ø· where("visible"==true) Ø§ÙØªØ±Ø§Ø¶ÙŠÙ‹Ø§ Ø¹Ø´Ø§Ù† Ù…Ø§ â€œÙŠØ®ØªÙÙŠâ€ Ø§Ø´ÙŠ Ø¹Ù†Ø¯ Ø·Ø±Ù ÙˆÙŠØ¸Ù‡Ø± Ø¹Ù†Ø¯ Ø·Ø±Ù
