    [form, submitted],
  );

  const scrollToFirstError = (errs) => {
    const keys = [
      "fullName",
      "phoneNumber",
      "selectedDate",
      "selectedTime",
      "selectedService",
    ];
    for (const k of keys) {
      if (errs[k]) {
        const el = document.getElementById(`field-${k}`);
