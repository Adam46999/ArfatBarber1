export default function CalendarGrid() {
  // State Ù„Ù„Ø£ÙŠØ§Ù… Ø§Ù„Ù…Ø­Ø¸ÙˆØ±Ø©
  const [blockedDays, setBlockedDays] = useState([]);

  // 1ï¸âƒ£ Ø¬Ù„Ø¨ blockedDays Ù…Ù† Firestore Ø¹Ù†Ø¯ Ø§Ù„Ø¸Ù‡ÙˆØ±
  useEffect(() => {
    const fetchBlocked = async () => {
      try {
        const snap = await getDocs(collection(db, "blockedDays"));
        setBlockedDays(snap.docs.map(d => d.id));
      } catch (err) {
        console.error("Ø®Ø·Ø£ Ø¨Ø¬Ù„Ø¨ Ø§Ù„Ø£ÙŠØ§Ù… Ø§Ù„Ù…Ø­Ø¬ÙˆØ±Ø©:", err);
      }
    };
    fetchBlocked();
  }, []);

  // 2ï¸âƒ£ ØªÙˆÙ„ÙŠØ¯ ÙƒÙ„ Ø£ÙŠØ§Ù… Ø§Ù„Ø´Ù‡Ø± Ø§Ù„Ø­Ø§Ù„ÙŠ
  const today = new Date();
  const start = startOfMonth(today);
  const end   = endOfMonth(today);
